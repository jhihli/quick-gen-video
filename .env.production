# Production Environment Configuration
NODE_ENV=production

# Base URLs for frontend and backend - using purchased domain
REACT_APP_BASE_URL=https://qwimgenv.com
BASE_URL=https://qwimgenv.com

# Server Configuration
PORT=5003

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_COUNT=10

# Video Generation Settings
VIDEO_QUALITY=high
VIDEO_FORMAT=mp4
DEFAULT_VIDEO_DURATION=30

# Security Settings - Restrict to domain in production
CORS_ORIGIN=https://qwimgenv.com

# Directory Paths
UPLOAD_DIR=public/uploads
VIDEO_OUTPUT_DIR=public/videos

# Redis Configuration (Optional - falls back to in-memory if not available)
# For production, consider setting up Redis for better performance
# REDIS_URL=redis://localhost:6379

REDIS_DISABLED=true

# Production Security Settings
# Ensure HTTPS is enforced and proper security headers are set
FORCE_HTTPS=true